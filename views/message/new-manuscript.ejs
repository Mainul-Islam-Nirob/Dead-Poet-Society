<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-900 to-gray-800 p-6 text-white">
  <div class="max-w-2xl w-full bg-white/5 backdrop-blur rounded-2xl shadow-2xl p-8 border border-white/10">
    <h2 class="text-3xl font-bold mb-6 text-center">✍️ Pen a Manuscript</h2>

    <% if (errors.length > 0) { %>
      <div class="bg-red-600 text-white p-3 rounded mb-4 text-center"><%= errors[0].msg %></div>
    <% } %>

    <form action="/manuscript/new" method="POST" class="space-y-6">
      <div>
        <label class="block mb-1 text-gray-300">Title of Manuscript</label>
        <input type="text" name="title" value="<%= oldInput.title || '' %>" required
          class="w-full px-4 py-2 rounded-lg bg-gray-900 border border-gray-700 text-white placeholder-gray-500 focus:ring-2 focus:ring-indigo-500">
      </div>

      <div>
        <label class="block mb-1 text-gray-300">Your Words</label>
        <textarea name="body" rows="6" required
          class="w-full px-4 py-2 rounded-lg bg-gray-900 border border-gray-700 text-white placeholder-gray-500 focus:ring-2 focus:ring-indigo-500"><%= oldInput.body || '' %></textarea>
      </div>

      <button type="submit"
        class="w-full py-2 px-4 bg-indigo-600 hover:bg-indigo-700 rounded-lg shadow-md font-semibold tracking-wide">
        Ink the Manuscript
      </button>
    </form>
  </div>
</div>
