<div class="min-h-screen flex flex-col items-center justify-center bg-gradient-to-br from-gray-900 to-gray-800 text-white p-6">
  <div class="max-w-md w-full bg-white/5 backdrop-blur rounded-2xl shadow-2xl p-8 border border-white/10">
    <h2 class="text-3xl font-bold mb-4 text-center">Welcome Back</h2>
    <% if (error && error.length > 0) { %>
      <div class="bg-red-600 text-white rounded p-2 mb-4 text-center"><%= error[0] %></div>
    <% } %>

    <form action="/login" method="POST" class="space-y-4">
      <div>
        <label class="block text-gray-300 mb-1">Email</label>
        <input type="email" name="username" required class="w-full px-4 py-2 rounded-lg bg-gray-900 border border-gray-700 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500">
      </div>

      <div>
        <label class="block text-gray-300 mb-1">Password</label>
        <input type="password" name="password" required class="w-full px-4 py-2 rounded-lg bg-gray-900 border border-gray-700 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500">
      </div>

      <button type="submit" class="w-full py-2 px-4 mt-4 bg-indigo-600 hover:bg-indigo-700 rounded-lg font-semibold tracking-wide shadow-md">Login</button>
    </form>

    <p class="text-sm text-gray-400 mt-4 text-center">New here? <a href="/signup" class="underline hover:text-indigo-400">Join the Society</a></p>
  </div>
</div>
