<div class="min-h-screen flex flex-col items-center justify-center bg-gradient-to-br from-gray-900 to-gray-800 text-white p-6">
  <div class="max-w-md w-full bg-white/5 backdrop-blur rounded-2xl shadow-2xl p-8 border border-white/10">
    
    <h2 class="text-3xl font-bold mb-2 text-center">Join the Dead Poet Society</h2>
    <p class="text-sm text-gray-300 mb-6 text-center italic">“Only in dreams, in poetry, in play — do we sometimes arrive at what we were before we were this thing that, by convention, we call ourselves.”</p>
    
    <% if (errors.length > 0) { %>
      <ul class="mb-4 text-red-400 text-sm">
        <% errors.forEach(error => { %>
          <li>• <%= error.msg %></li>
        <% }); %>
      </ul>
    <% } %>

    <form action="/signup" method="POST" class="space-y-4">
      <div>
        <label class="block text-gray-300 mb-1">First Name</label>
        <input type="text" name="firstName" value="<%= oldInput.firstName || '' %>" required class="w-full px-4 py-2 rounded-lg bg-gray-900 border border-gray-700 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500">
      </div>

      <div>
        <label class="block text-gray-300 mb-1">Last Name</label>
        <input type="text" name="lastName" value="<%= oldInput.lastName || '' %>" required class="w-full px-4 py-2 rounded-lg bg-gray-900 border border-gray-700 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500">
      </div>

      <div>
        <label class="block text-gray-300 mb-1">Email (Username)</label>
        <input type="email" name="username" value="<%= oldInput.username || '' %>" required class="w-full px-4 py-2 rounded-lg bg-gray-900 border border-gray-700 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500">
      </div>

      <div>
        <label class="block text-gray-300 mb-1">Password</label>
        <input type="password" name="password" required class="w-full px-4 py-2 rounded-lg bg-gray-900 border border-gray-700 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500">
      </div>

      <div>
        <label class="block text-gray-300 mb-1">Confirm Password</label>
        <input type="password" name="confirmPassword" required class="w-full px-4 py-2 rounded-lg bg-gray-900 border border-gray-700 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500">
      </div>

      <button type="submit" class="w-full py-2 px-4 mt-4 bg-indigo-600 hover:bg-indigo-700 rounded-lg font-semibold tracking-wide shadow-md">Join Now</button>
    </form>

    <p class="text-sm text-gray-400 mt-4 text-center">Already a member? <a href="/login" class="underline hover:text-indigo-400">Log in</a></p>
  </div>
</div>
