<div class="max-w-6xl mx-auto mt-10 p-8 rounded-xl shadow-xl bg-gray-900 text-white">
  <h1 class="text-3xl font-bold text-indigo-300 mb-8">🛡️ Admin Dashboard</h1>

  <h2 class="text-xl font-semibold mb-4 text-indigo-200">📜 All Manuscripts</h2>
  <div class="overflow-x-auto mb-10">
    <table class="min-w-full table-auto text-sm">
      <thead class="bg-gray-800">
        <tr>
          <th class="px-4 py-2">Title</th>
          <th class="px-4 py-2">Author</th>
          <th class="px-4 py-2">Date</th>
          <th class="px-4 py-2">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% messages.forEach(message => { %>
          <tr class="border-b border-gray-700">
            <td class="px-4 py-2"><%= message.title %></td>
            <td class="px-4 py-2"><%= message.first_name %> <%= message.last_name %></td>
            <td class="px-4 py-2"><%= moment(message.timestamp).format('LLL') %></td>
            <td class="px-4 py-2">
              <form action="/admin/manuscript/<%= message.id %>/delete" method="POST" onsubmit="return confirm('Delete manuscript?');">
                <button type="submit" class="px-3 py-1 bg-red-700 hover:bg-red-800 rounded-lg text-white">🗑️ Delete</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <h2 class="text-xl font-semibold mb-4 text-indigo-200">👥 All Users</h2>
  <div class="overflow-x-auto">
    <table class="min-w-full table-auto text-sm">
      <thead class="bg-gray-800">
        <tr>
          <th class="px-4 py-2">Name</th>
          <th class="px-4 py-2">Email</th>
          <th class="px-4 py-2">Membership</th>
          <th class="px-4 py-2">Role</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
          <tr class="border-b border-gray-700">
            <td class="px-4 py-2"><%= user.first_name %> <%= user.last_name %></td>
            <td class="px-4 py-2"><%= user.username %></td>
            <td class="px-4 py-2"><%= user.is_member ? '✅ Member' : '❌ Not a Member' %></td>
            <td class="px-4 py-2"><%= user.is_admin ? '🛡️ Admin' : '👤 User' %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <a href="/" class="mt-8 inline-block px-5 py-2 bg-gray-700 hover:bg-gray-800 rounded-lg text-indigo-200">← Return to Salon</a>
</div>
